{{ 'aura-faq-new.css' | asset_url | stylesheet_tag }}

<div class="Aura_faq_main_new">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="Aura_faq_heading_new">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="Aura_faq_list_new">
      {%- for block in section.blocks -%}
        {%- if block.type == 'item' -%}
          <details class="Aura_faq_item_new" {{ block.shopify_attributes }}>
            <summary class="Aura_faq_header_new">
              {%- if block.settings.question != blank -%}
                <span>{{ block.settings.question }}</span>
              {%- endif -%}
              <svg class="Aura_faq_icon_new" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 2v12M2 8h12" stroke="currentColor" stroke-width="2"/>
              </svg>
            </summary>
            {%- if block.settings.answer != blank -%}
              <div class="Aura_faq_content_new">
                {{ block.settings.answer }}
              </div>
            {%- endif -%}
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- if section.settings.view_all_text != blank and section.settings.view_all_link != blank -%}
      <a href="{{ section.settings.view_all_link }}" class="Aura_faq_view_all_new">{{ section.settings.view_all_text }}</a>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Aura FAQ",
    "class": "Aura_faq_section_new",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "FAQs"
      },
      {
        "type": "text",
        "id": "view_all_text",
        "label": "View All Button Text",
        "default": "View All FAQs"
      },
      {
        "type": "url",
        "id": "view_all_link",
        "label": "View All Button Link"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "FAQ Item",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Aura FAQ",
        "blocks": [
          { "type": "item", "settings": { "question": "Are Chamelo AURA's waterproof?" } },
          { "type": "item", "settings": { "question": "How long does the battery last?" } },
          { "type": "item", "settings": { "question": "What's included in the box?" } },
          { "type": "item", "settings": { "question": "Shipping and returns?" } }
        ]
      }
    ]
  }
{% endschema %}
