{{ 'index-banner-slider-new.css' | asset_url | stylesheet_tag }}

{%- if section.blocks.size > 0 -%}
  <div class="Index_banner_slider_main_new">
    <div class="Index_banner_slider_swiper_new swiper" id="banner-slider-{{ section.id }}">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.type == 'slide' -%}
            <div class="swiper-slide Index_banner_slider_slide_new" {{ block.shopify_attributes }}>
              {%- if block.settings.desktop_image != blank -%}
                <div class="Index_banner_slider_slide_bg_new Desktop_only_new">
                  {{
                    block.settings.desktop_image |
                    image_url: width: 1920 |
                    image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944',
                    fetchpriority: 'auto',
                    class: 'Index_banner_slider_slide_img_new'
                  }}
                </div>
              {%- endif -%}
              {%- if block.settings.mobile_image != blank -%}
                <div class="Index_banner_slider_slide_bg_new Mobile_only_new">
                  {{
                    block.settings.mobile_image |
                    image_url: width: 750 |
                    image_tag: widths: '375, 500, 750',
                    fetchpriority: 'auto',
                    class: 'Index_banner_slider_slide_img_new'
                  }}
                </div>
              {%- elsif block.settings.desktop_image != blank -%}
                <div class="Index_banner_slider_slide_bg_new Mobile_only_new">
                  {{
                    block.settings.desktop_image |
                    image_url: width: 750 |
                    image_tag: widths: '375, 500, 750',
                    fetchpriority: 'auto',
                    class: 'Index_banner_slider_slide_img_new'
                  }}
                </div>
              {%- endif -%}
              {%- if block.settings.desktop_video != blank -%}
                <div class="Index_banner_slider_slide_bg_new Desktop_only_new">
                  {{ block.settings.desktop_video | video_tag: class: 'Index_banner_slider_slide_vid_new', image_size: 'master', controls: false, autoplay: true, loop: true, muted: true }}
                </div>
              {%- endif -%}
              {%- if block.settings.mobile_video != blank -%}
                <div class="Index_banner_slider_slide_bg_new Mobile_only_new">
                  {{ block.settings.mobile_video | video_tag: class: 'Index_banner_slider_slide_vid_new', image_size: 'master', controls: false, autoplay: true, loop: true, muted: true }}
                </div>
              {%- endif -%}
              <div class="Index_banner_slider_slide_content_new">
                <div class="Index_banner_slider_slide_text_new">
                  {%- if block.settings.heading != blank -%}
                    <h2 class="Index_banner_slider_slide_heading_new">{{ block.settings.heading }}</h2>
                  {%- endif -%}
                  {%- if block.settings.subtitle != blank -%}
                    <p class="Index_banner_slider_slide_subtitle_new">{{ block.settings.subtitle }}</p>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="Index_banner_slider_slide_button_new">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="Index_banner_slider_pagination_new swiper-pagination"></div>
    </div>
    {%- if section.settings.quote_text != blank or section.settings.quote_logo != blank -%}
      <div class="Index_banner_slider_quotebar_new">
        <div class="Index_banner_slider_quotebar_inner_new">
          {%- if section.settings.quote_text != blank -%}
            <p class="Index_banner_slider_quotebar_text_new">{{ section.settings.quote_text }}</p>
          {%- endif -%}
          {%- if section.settings.quote_logo != blank -%}
            <div class="Index_banner_slider_quotebar_logo_new">
              {{
                section.settings.quote_logo |
                image_url: width: 240 |
                image_tag: widths: '120, 240',
                fetchpriority: 'auto',
                class: 'Index_banner_slider_quotebar_logo_img_new'
              }}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof Swiper !== 'undefined') {
        new Swiper('#banner-slider-{{ section.id }}', {
          slidesPerView: 1,
          loop: true,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false
          },
          pagination: {
            el: '#banner-slider-{{ section.id }} .swiper-pagination',
            clickable: true
          },
          effect: 'fade',
          fadeEffect: {
            crossFade: true
          }
        });
      }
    });
  </script>
{%- endif -%}

{% schema %}
  {
    "name": "Index Banner Slider",
    "class": "Index_banner_slider_section_new",
    "settings": [
      {
        "type": "text",
        "id": "quote_text",
        "label": "Quote Bar Text"
      },
      {
        "type": "image_picker",
        "id": "quote_logo",
        "label": "Quote Bar Logo"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
          },
          {
            "type": "video",
            "id": "desktop_video",
            "label": "Desktop Video"
          },
          {
            "type": "video",
            "id": "mobile_video",
            "label": "Mobile Video"
          },
          {
            "type": "textarea",
            "id": "heading",
            "label": "Heading",
            "default": "Premium Snow Goggles"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "With instant tint control."
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "SHOP NOW"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Banner Slider",
        "blocks": [
          { "type": "slide" },
          { "type": "slide" },
          { "type": "slide" }
        ]
      }
    ]
  }
{% endschema %}
