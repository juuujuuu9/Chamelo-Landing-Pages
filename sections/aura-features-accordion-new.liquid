{{ 'aura-features-accordion-new.css' | asset_url | stylesheet_tag }}

<div class="Aura_features_accordion_main_new">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="Aura_features_accordion_heading_new">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="Aura_features_accordion_list_new">
      {%- for block in section.blocks -%}
        {%- if block.type == 'item' -%}
          <details class="Aura_features_accordion_item_new" {{ block.shopify_attributes }}>
            <summary class="Aura_features_accordion_header_new">
              {%- if block.settings.title != blank -%}
                <span>{{ block.settings.title }}</span>
              {%- endif -%}
              <svg class="Aura_features_accordion_icon_new" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 2v12M2 8h12" stroke="currentColor" stroke-width="2"/>
              </svg>
            </summary>
            {%- if block.settings.content != blank -%}
              <div class="Aura_features_accordion_content_new">
                {{ block.settings.content }}
              </div>
            {%- endif -%}
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Aura Features Accordion",
    "class": "Aura_features_accordion_section_new",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Why Chamelo?"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Accordion Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Aura Features Accordion",
        "blocks": [
          { "type": "item", "settings": { "title": "Change color with a tap" } },
          { "type": "item", "settings": { "title": "Crystal-clear vision, always" } },
          { "type": "item", "settings": { "title": "Smart-tint technology" } },
          { "type": "item", "settings": { "title": "UV400+ protection" } }
        ]
      }
    ]
  }
{% endschema %}
